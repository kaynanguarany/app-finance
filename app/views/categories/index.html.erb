<h1>Lista de categorias</h1>

<% if @categories.empty? %>
  <h2 id="no-categories">Não há categorias criadas</h2>
<% else %>
  <table class="table">
    <tr>
      <th>name</th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
      </tr>
    <% end %>
  </table>  
<% end %>
